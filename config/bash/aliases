# Aliases
alias c='clear'
alias nf='fastfetch'
alias pf='fastfetch'
alias hex="openssl rand -hex"
alias path='echo $PATH | tr : "\n" | uniq'
alias pubkey="cat ~/.ssh/id_rsa.pub | pbcopy | printf '=> Public key copied to pasteboard.\n'"
alias grep="grep --color=auto"
alias cd="z"
alias bat="batcat"
alias ff="fzf --preview 'bat --style=numbers --color=always {}'"
alias ls="eza --colour=always --icons --git --git-repos --header --group-directories-first"
alias ll="ls -l -o"
alias scratch="nvim ~/Projects/scratches"
alias kamal_v1='docker run -it --rm -v "${PWD}:/workdir" -v "${SSH_AUTH_SOCK}:/ssh-agent" -v /var/run/docker.sock:/var/run/docker.sock -e "SSH_AUTH_SOCK=/ssh-agent" ghcr.io/basecamp/kamal:v1.9.2'
